<form id="searchQuiz">
    <h2>SEARCH FOR A QUIZ</h2>
    <input type="text" id="quizSearch"></input type="text">
    <button>Search</button>
</form>

{{!-- a tags should link to appropriate quiz route --}}
<h2>FEATURED QUIZZES</h2>
<ul id="featuredQuizzes">
    {{#each featuredQuizzes}}
    <li>
        <a href="/quiz/{{this.id}}">{{this.quiz_name}}<img src={{this.image_tile}}></a>
    </li>
    {{/each}}
</ul>

<h2>ALL QUIZZES</h2>
<ul id="allQuizzes">
    {{#each allQuizzes}}
    <li>
        <a href="/quiz/{{this.id}}">{{this.quiz_name}}</a>
    </li>
    {{/each}}
</ul>

<div id="searchedQuizzes" style="display: none; background-color:aqua">
    <h2>Search results:</h2>
    <ul></ul>
</div>
<button id="normalViewToggle" style="display: none; background-color:aqua">Back</button>

<script src="/assets/js/home.js"></script>